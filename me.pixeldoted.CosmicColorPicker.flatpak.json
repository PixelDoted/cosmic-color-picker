{
  "app-id": "me.pixeldoted.CosmicColorPicker",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "cosmic-color-picker",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=xdg-config/cosmic:rw"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "cosmic-color-picker",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/cosmic-color-picker/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm755 ./target/release/cosmic-color-picker -t /app/bin/",
        "install -Dm644 ./res/app_icon.svg /app/share/icons/hicolor/scalable/apps/me.pixeldoted.CosmicColorPicker.svg",
        "install -Dm644 ./res/me.pixeldoted.CosmicColorPicker.metainfo.xml /app/share/metainfo/me.pixeldoted.CosmicColorPicker.metainfo.xml",
        "install -Dm644 ./res/me.pixeldoted.CosmicColorPicker.desktop /app/share/applications/me.pixeldoted.CosmicColorPicker.desktop"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        "cargo-sources.json"
      ]
    }
  ]
}